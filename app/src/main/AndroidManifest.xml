        <activity android:name="com.myapp.atys.ShowStudentActivity" />
        <activity android:name="com.myapp.atys.ShowCoachActivity" />
        <activity android:name="com.myapp.atys.ShowClassActivity" />
        <activity android:name="com.myapp.atys.ShowCourseActivity" />

        <activity android:name="com.myapp.atys.StudentSearch" />
        <activity android:name="com.myapp.atys.CoachSearch" />
        <activity android:name="com.myapp.atys.ClassSearch" />
        <activity android:name="com.myapp.atys.CourseSearch" />

        <activity android:name="com.myapp.atys.StudentListActivity" />
